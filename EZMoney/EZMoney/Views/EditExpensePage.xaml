<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EZMoney.Views.EditExpensePage">
    <StackLayout Padding="20">
        <Label Text="Editar Gasto" FontSize="24" FontAttributes="Bold"/>

        <Entry Placeholder="Categoría" Text="{Binding Expense.Category}"/>
        <Entry Placeholder="Descripción" Text="{Binding Expense.Description}"/>
        <Entry Placeholder="Monto" Text="{Binding Expense.Amount}"/>
        <DatePicker Date="{Binding Expense.Date}"/>

        <Button Text="Guardar" Command="{Binding SaveCommand}" />
    </StackLayout>
</ContentPage>